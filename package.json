{
  "name": "@penggy/pack",
  "version": "1.2.2",
  "description": "pack your nodejs project",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bin": {
    "pack": "bin/pack.js"
  },
  "files": [
    "bin",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "zip",
    "tar",
    "package",
    "archive",
    "nodejs",
    "project"
  ],
  "author": "penggy",
  "license": "ISC",
  "dependencies": {
    "@dpwolfe/dos2unix": "1.1.3",
    "archiver": "2.1.1",
    "commander": "2.15.0",
    "fs-extra": "5.0.0",
    "glob": "7.1.2",
    "moment": "2.29.4",
    "pretty-bytes": "4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/penggy/pack"
  },
  "pack": [
    {
      "name": "xxx",
      "path": "build",
      "pattern": "**",
      "options": {
        "dot": true,
        "ignore": [
          "node_modules/**",
          "*.log",
          "*.tar.gz",
          "*.zip"
        ]
      }
    },
    {
      "name": "yyy",
      "format": "tar",
      "pattern": "**",
      "options": {
        "dot": false,
        "ignore": [
          "node_modules/**",
          "*.log",
          "*.tar.gz",
          "*.zip"
        ]
      }
    }
  ]
}